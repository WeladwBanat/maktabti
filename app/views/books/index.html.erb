<legend>عرض الكتب</legend>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>اسم الكتاب</th>
      <th>رقم الكتاب</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.isbn %></td>
      <td><%= link_to 'عرض', book %></td>
      <td><%= link_to 'تعديل', edit_book_path(book) %></td>
      <td><%= link_to 'حذف', book, method: :delete, data: { confirm: 'هل تريد حذف هذا الكتاب ؟' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br />
<%= link_to 'تسجيل كتاب جديد', new_book_path , :class => 'btn' %>
